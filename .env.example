# =============================================================================
# Sports Suite - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_USER=nba_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost

# Database Ports (optional - defaults shown)
NBA_PLAYERS_PORT=5536
NBA_GAMES_PORT=5537
NBA_TEAM_PORT=5538
NBA_INTELLIGENCE_PORT=5539
NBA_REFERENCE_PORT=5540

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGO_USER=sports_user
MONGO_PASSWORD=your_mongo_password_here
MONGO_PORT=27017

# -----------------------------------------------------------------------------
# API Keys
# -----------------------------------------------------------------------------
# BettingPros API (for props data)
BETTINGPROS_API_KEY=your_bettingpros_api_key_here

# The Odds API (for odds data)
ODDS_API_KEY=your_odds_api_key_here

# -----------------------------------------------------------------------------
# Optional Configuration
# -----------------------------------------------------------------------------
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Feature flags
ENABLE_LIVE_PREDICTIONS=true
